<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">IAMメンバー検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/home">Home</a>
                    </li>
                    <li class="breadcrumb-item active">IAMメンバー検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-default">
                    <div class="card-header">
                        <!-- <h3 class="card-title">Quick Example</h3> -->
                        <div class="toolbar">
                            <button type="button" class="btn btn-default btn-sm"
                                onclick="location.href='/projects/<%= req.project.id %>/iam/members/new'">
                                <i class="fa fa-plus"></i> 追加</button>
                            <a class="btn btn-default btn-sm search" href="#">
                                <i class="fa fa-redo"></i>&nbsp;&nbsp;更新</a>
                        </div>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <!-- form start -->
                        <form role="form" method="get" class="search">
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label>メンバータイプ</label>
                                    <select class="form-control form-control-sm" name="member[typeOf][$eq]">
                                        <option value=""></option>
                                        <% const memberTypes = ['WebApplication', 'Person']; %>
                                        <% memberTypes.forEach(function (memberType) { %>
                                        <% 
                                                var selected = false;
                                                selected = searchConditions.member !== undefined && searchConditions.member.typeOf !== undefined
                                                    && searchConditions.member.typeOf.$eq === memberType;
                                                %>
                                        <option value="<%= memberType %>" <% if (selected) { %> selected <% } %>>
                                            <%= memberType %>
                                        </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table id="members-table" class="table table-sm table-hover dataTable">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Member</th>
                                        <th>Name</th>
                                        <th>Username</th>
                                        <th>Roles</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- DataTables -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">

<script src="/js/iam/members/index.js"></script>