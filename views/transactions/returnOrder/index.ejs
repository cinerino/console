<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">注文返品取引検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/home">Home</a>
                    </li>
                    <li class="breadcrumb-item active">注文返品取引検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-default">
                    <div class="card-header">
                        <!-- <h3 class="card-title">Quick Example</h3> -->
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                            <!-- <a class="btn btn-default btn-sm search" href="#">
                                <i class="fa fa-redo"></i>&nbsp;&nbsp;更新</a> -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm search">検索</button>
                                <button type="button" class="btn btn-default btn-sm dropdown-toggle"
                                    data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" role="menu">
                                    <a class="dropdown-item search" href="#">検索</a>
                                    <a class="dropdown-item downloadCSV" href="#">CSVダウンロード</a>
                                    <a class="dropdown-item downloadJson" href="#">JSONダウンロード</a>
                                    <!-- <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a> -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <!-- form start -->
                        <form role="form" method="get">
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label for="object[order][orderNumbers]">注文番号</label>
                                    <input type="text" class="form-control form-control-sm"
                                        id="object[order][orderNumbers]" name="object[order][orderNumbers]"
                                        placeholder="注文番号"
                                        value="<%= (Array.isArray(searchConditions.object.order.orderNumbers)) ? searchConditions.object.order.orderNumbers.join(',') : '' %>">
                                </div>
                                <div class="form-group col-md-2">
                                    <label>取引開始日時</label>

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-sm" name="startRange"
                                            id="startRange"
                                            value="<%= moment(searchConditions.startFrom).format('YYYY-MM-DDTHH:mm:ssZ') %> - <%= moment(searchConditions.startThrough).format('YYYY-MM-DDTHH:mm:ssZ') %>">
                                    </div>
                                    <!-- /.input group -->
                                </div>
                                <div class="form-group col-md-2">
                                    <label>ステータス</label>
                                    <select multiple class="form-control form-control-sm" name="statuses[]">
                                        <% transactionStatusChoices.forEach(function (transactionStatus) { %>
                                        <% var selected = searchConditions.statuses.indexOf(transactionStatus) >= 0; %>
                                        <option value="<%= transactionStatus %>" <% if (selected) { %> selected <% } %>>
                                            <%= transactionStatus %>
                                        </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="form-group col-md-2">
                                    <label>タスクエクスポートステータス</label>
                                    <select multiple class="form-control form-control-sm"
                                        name="tasksExportationStatuses[]">
                                        <% Object.values(TransactionTasksExportationStatus).forEach(function (status) { %>
                                        <% var selected = searchConditions.tasksExportationStatuses.indexOf(status) >= 0; %>
                                        <option value="<%= status %>" <% if (selected) { %> selected <% } %>>
                                            <%= status %>
                                        </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <!-- /.card-body -->
                        </form>

                        <div class="table-responsive">
                            <table id="transactions-table" class="table table-sm table-hover dataTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Status</th>
                                        <th>Start</th>
                                        <th>End</th>
                                        <th>Expires</th>
                                        <th>処理者</th>
                                        <th>販売者</th>
                                        <th>対象</th>
                                        <th>タスクステータス</th>
                                        <th>タスクエクスポート</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

