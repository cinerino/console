<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">注文取引検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active">注文取引検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div> -->
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" method="get">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="agent[ids]">購入者</label>
                                        <input type="text" class="form-control" id="agent[ids]" name="agent[ids]"
                                            placeholder="購入者ID" value="<%= searchConditions.agent.ids.join(',') %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="object[customerContact][familyName]"
                                            name="object[customerContact][familyName]" placeholder="姓" value="<%= searchConditions.object.customerContact.familyName %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="object[customerContact][givenName]"
                                            name="object[customerContact][givenName]" placeholder="名" value="<%= searchConditions.object.customerContact.givenName %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="object[customerContact][email]"
                                            name="object[customerContact][email]" placeholder="test@example.com" value="<%= searchConditions.object.customerContact.email %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="object[customerContact][telephone]"
                                            name="object[customerContact][telephone]" placeholder="+819012345678" value="<%= searchConditions.object.customerContact.telephone %>">
                                    </div>
                                    <div class="form-group">
                                        <label>販売者</label>
                                        <select multiple class="form-control" name="seller[ids][]">
                                            <% movieTheaters.forEach(function (movieTheater) { %>
                                            <% var selected = searchConditions.seller.ids.indexOf( movieTheater.id) >= 0; %>
                                            <option value="<%= movieTheater.id %>" <% if (selected) { %> selected
                                                <% } %>>
                                                <%= movieTheater.name.ja %>
                                            </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="result[order][orderNumbers]">注文番号</label>
                                        <input type="text" class="form-control" id="result[order][orderNumbers]" name="result[order][orderNumbers]"
                                            placeholder="注文番号" value="<%= searchConditions.result.order.orderNumbers.join(',') %>">
                                    </div>
                                    <div class="form-group">
                                        <label>取引開始日時</label>

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <input type="text" class="form-control" name="startRange" id="startRange"
                                                value="<%= moment(searchConditions.startFrom).format('YYYY-MM-DDT00:00:00Z') %> - <%= moment(searchConditions.startThrough).format('YYYY-MM-DDT00:00:00Z') %>">
                                        </div>
                                        <!-- /.input group -->
                                    </div>
                                    <div class="form-group">
                                        <label>ステータス</label>
                                        <select multiple class="form-control" name="statuses[]">
                                            <% transactionStatusChoices.forEach(function (transactionStatus) { %>
                                            <% var selected = searchConditions.statuses.indexOf(transactionStatus) >= 0; %>
                                            <option value="<%= transactionStatus %>" <% if (selected) { %> selected
                                                <% } %>>
                                                <%= transactionStatus %>
                                            </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="btn-group float-right">
                                <button type="button" class="btn btn-info search">検索</button>
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" role="menu">
                                    <a class="dropdown-item search" href="#">検索</a>
                                    <a class="dropdown-item downloadCSV" href="#">CSVダウンロード</a>
                                    <!-- <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a> -->
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">検索結果</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table id="transactions-table" class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>ID<br>Status<br>Start<br>End<br>Expires</th>
                                    <th>購入者</th>
                                    <th>販売者</th>
                                    <th>ユーザー主体<br>トークン発行者<br>クライアント</th>
                                    <th>結果</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID<br>Status<br>Start<br>End<br>Expires</th>
                                    <th>購入者</th>
                                    <th>販売者</th>
                                    <th>ユーザー主体<br>トークン発行者<br>クライアント</th>
                                    <th>結果</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- DataTables -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/datatables/dataTables.bootstrap4.css">

<!-- daterange picker -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/daterangepicker/daterangepicker-bs3.css">

<script src="/node_modules/admin-lte/plugins/daterangepicker/daterangepicker.js"></script>

<!-- page script -->
<script>
    $(function () {
        $("#transactions-table").DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: '/transactions/placeOrder?' * $('form').serialize(),
                data: function (d) {
                    d.limit = d.length;
                    d.page = (d.start / d.length) + 1;
                    // d.name = d.search.value;
                    d.format = 'datatable';
                }
            },
            searching: false,
            order: [[1, 'asc']], // デフォルトは枝番号昇順
            ordering: false,
            columns: [
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<ul class="list-unstyled">'
                            + '<li><a target="_blank" href="/transactions/placeOrder/' + data.id + '">' + data.id + '</a></li>'
                            + '<li><span class="badge badge-info">' + data.status + '</span></li>'
                            + '<li>' + data.startDate + '</li>'
                            + '<li>' + data.endDate + '</li>'
                            + '<li>' + data.expires + '</li>'
                            + '</ul>';
                    }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        var html = '<ul class="list-unstyled">'
                            + '<li>' + data.agent.typeOf + '</li>';
                        if (data.agent.memberOf !== undefined) {
                            html += '<li><a target="_blank" href="/people/' + data.agent.id + '">' + data.agent.id + '</a></li>'
                                + '<li>' + data.agent.memberOf.membershipNumber + '</li>';
                        } else {
                            html += '<li>' + data.agent.id + '</li>';
                        }
                        if (data.object.customerContact !== undefined) {
                            html += '<li>' + data.object.customerContact.familyName + ' ' + data.object.customerContact.givenName + '</li>'
                                + '<li>' + data.object.customerContact.email + '</li>'
                                + '<li>' + data.object.customerContact.telephone + '</li>';
                        }
                        html += '</ul>';

                        return html;
                    }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<ul class="list-unstyled">'
                            + '<li>' + data.seller.typeOf + '</li>'
                            + '<li><a target="_blank" href="/organizations/' + data.seller.typeOf + '/' + data.seller.id + '">' + data.seller.name.ja + '</a></li>'
                            + '<li>' + data.seller.telephone + '</li>'
                            + '<li>' + data.seller.url + '</li>'
                            + '</ul>';
                    }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        var userPoolId = data.object.clientUser.iss.replace('https://cognito-idp.ap-northeast-1.amazonaws.com/', '');
                        return '<ul class="list-unstyled">'
                            + '<li>' + data.object.clientUser.sub + '</li>'
                            + '<li><a target="_blank" href="/userPools/' + userPoolId + '">' + data.object.clientUser.iss + '</a></li>'
                            + '<li><a target="_blank" href="/userPools/' + userPoolId + '/clients/' + data.object.clientUser.client_id + '">' + data.object.clientUser.client_id + '</a></li>'
                            + '</ul>';
                    }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        if (data.result !== undefined) {
                            return '<ul class="list-unstyled">'
                                + '<li><a target="_blank" href="/orders/' + data.result.order.orderNumber + '">' + data.result.order.orderNumber + '</a></li>'
                                + '</ul>';
                        } else {
                            return '<ul class="list-unstyled">'
                                + '<li>No Result</li>'
                                + '</ul>';
                        }
                    }
                }
            ]
        });

        //Date range picker
        $('#startRange').daterangepicker({
            timePicker: false,
            // timePickerIncrement: 30,
            format: 'YYYY-MM-DDT00:00:00+0900'
        });

        $('.search').click(function () {
            $('form').submit();
        });
        $('.downloadCSV').click(function () {
            var url = '/transactions/placeOrder?' + $('form').serialize() + '&format=text/csv';
            window.open(url, '_blank');
        });
    });
</script>