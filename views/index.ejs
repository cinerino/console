<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Dashboard</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 id="newOrderCount"></h3>

                        <p>新規注文</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="/orders" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3 id="exitRate">0</h3>

                        <p>離脱率</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3 id="newUserCount">0</h3>

                        <p>ユーザー登録</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3 id="newTransactionCount">0</h3>

                        <p>取引数</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <input type="hidden" name="waiterEndpoint" value="<%= process.env.WAITER_ENDPOINT %>">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
                <!-- solid sales graph -->
                <div class="card bg-dark-gradient" id="visitors">
                    <div class="card-header no-border">
                        <h3 class="card-title">
                            取引訪問者数
                        </h3>

                        <div class="card-tools">
                            <div class="btn-group">
                                <button type="button" class="btn bg-dark btn-tool dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-wrench"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" role="menu">
                                    <a target="_blank" href="/waiter/rules" class="dropdown-item">入場制限設定を見る</a>
                                </div>
                            </div>
                            <button type="button" class="btn bg-dark btn-sm" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn bg-dark btn-sm" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart" id="visitorsChart" style="height: 250px;"></div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer bg-transparent">
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->

            </section>
            <!-- /.Left col -->

            <!-- right col (We are only adding the ID to make the widgets sortable)-->
            <section class="col-lg-5 connectedSortable">
                <div class="card bg-dark">
                    <div class="card-header no-border">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">
                                タスクキュー遷移</h3>
                            <!-- <a href="javascript:void(0);">View Report</a> -->
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                            <p class="d-flex flex-column">
                                <span class="text-bold text-lg">???</span>
                                <span>タスクキュー数</span>
                            </p>
                            <p class="ml-auto d-flex flex-column text-right">
                                <!-- <span class="text-success">
                                        <i class="fa fa-arrow-up"></i> 12.5%
                                    </span> -->
                                <span class="text-muted">Since last 12 hours</span>
                            </p>
                        </div>
                        <!-- /.d-flex -->

                        <div class="position-relative mb-4">
                            <canvas id="task-queues-chart" height="200"></canvas>
                        </div>

                        <div class="d-flex flex-row justify-content-end">
                            <!-- <span class="mr-2">
                                    <i class="fa fa-square text-primary"></i> This Week
                                </span>
    
                                <span>
                                    <i class="fa fa-square text-gray"></i> Last Week
                                </span> -->
                        </div>
                    </div>
                </div>
                <!-- /.card -->

                <div class="card bg-dark">
                    <div class="card-header no-border">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">売上散布図</h3>
                            <!-- <a href="javascript:void(0);">View Report</a> -->
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                            <p class="d-flex flex-column">
                                <span class="text-bold text-lg">???</span>
                                <span>売上</span>
                            </p>
                            <p class="ml-auto d-flex flex-column text-right">
                                <!-- <span class="text-success">
                                            <i class="fa fa-arrow-up"></i> 12.5%
                                        </span> -->
                                <span class="text-muted">Since last 24 hours</span>
                            </p>
                        </div>
                        <!-- /.d-flex -->

                        <div class="position-relative mb-4">
                            <canvas id="sales-amount-chart" height="200"></canvas>
                        </div>

                        <div class="d-flex flex-row justify-content-end">
                            <!-- <span class="mr-2">
                                        <i class="fa fa-square text-primary"></i> This Week
                                    </span>
        
                                    <span>
                                        <i class="fa fa-square text-gray"></i> Last Week
                                    </span> -->
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </section>
            <!-- right col -->
        </div>
        <!-- /.row (main row) -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- ChartJS 1.0.1 -->
<script src="/node_modules/admin-lte/plugins/chart.js/Chart.min.js"></script>
<script src="/js/dashboard.js"></script>
<!-- page script -->
<script>
    $(function () {
        var movieTheaters = JSON.parse('<%- JSON.stringify(movieTheaters) %>');
        var orders = JSON.parse('<%- JSON.stringify(orders) %>');
        var globalTelemetries = JSON.parse('<%- JSON.stringify(globalTelemetries) %>');
        var sellerTelemetries = JSON.parse('<%- JSON.stringify(sellerTelemetries) %>');
        var globalFlowTelemetries = JSON.parse('<%- JSON.stringify(globalFlowTelemetries) %>');
        var sellerFlowTelemetries = JSON.parse('<%- JSON.stringify(sellerFlowTelemetries) %>');

        var ticksStyle = {
            fontColor: '#495057',
            fontStyle: 'bold'
        }

        var mode = 'index';
        var intersect = true;

        // タスクキューチャート
        var data = globalTelemetries.map(function (telemetry, index) {
            return {
                x: telemetry.result.measuredAt,
                y: telemetry.result.tasks.numberOfUnexecuted
            };
        });
        var taskQueuesChart = new Chart($('#task-queues-chart'), {
            type: 'line',
            data: {
                // labels: ['12時間前', '9時間前', '6時間前', '3時間前', '0時間前'],
                datasets: [
                    {
                        data: data,
                        backgroundColor: 'transparent',
                        borderColor: '#DAA8F5',
                        borderWidth: 1,
                        pointRadius: 2,
                        pointBorderColor: '#DAA8F5',
                        pointBackgroundColor: '#DAA8F5',
                        fill: false
                    },
                ]
            },
            options: {
                pointDot: true,
                maintainAspectRatio: false,
                legend: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        display: true,
                        gridLines: {
                            display: true,
                            lineWidth: 1,
                            color: '#555c62',
                            zeroLineColor: '#555c62',
                        },
                        ticks: {
                            beginAtZero: true,
                            fontColor: '#a1a6a9'
                        }
                    }],
                    xAxes: [{
                        time: {
                            unit: 'hour'
                        },
                        type: 'time',
                        display: true,
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            fontColor: '#a1a6a9'
                        }
                    }]
                }
            }
        });

        // 売上散布チャート
        var data = orders.map(function (order, index) {
            return {
                x: moment().format('YYYY-MM-DDT') + moment(order.orderDate).format('hh:mm:ssZ'),
                y: order.price
            };
        });
        var taskQueuesChart = new Chart($('#sales-amount-chart'), {
            type: 'scatter',
            data: {
                // labels: ['12時間前', '9時間前', '6時間前', '3時間前', '0時間前'],
                datasets: [
                    {
                        data: data,
                        backgroundColor: 'transparent',
                        borderColor: '#DAA8F5',
                        borderWidth: 1,
                        pointRadius: 2,
                        pointBorderColor: '#DAA8F5',
                        pointBackgroundColor: '#DAA8F5',
                        fill: false
                    },
                ]
            },
            options: {
                pointDot: true,
                maintainAspectRatio: false,
                legend: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        display: true,
                        gridLines: {
                            display: true,
                            lineWidth: 1,
                            color: '#555c62',
                            zeroLineColor: '#555c62',
                        },
                        ticks: {
                            beginAtZero: true,
                            fontColor: '#a1a6a9'
                        }
                    }],
                    xAxes: [{
                        type: 'time',
                        time: {
                            unit: 'hour',
                            stepSize: 1
                        },
                        display: true,
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            fontColor: '#a1a6a9'
                        }
                    }]
                }
            }
        });
    });
</script>