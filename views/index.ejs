<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 connectedSortable">
                <% movieTheaters.forEach(function(movieTheater){ %>
                    <div class="card bg-dark">
                        <div class="card-header no-border">
                            <div class="d-flex justify-content-between">
                                <h3 class="card-title">
                                    <%= movieTheater.name.ja %>進行中取引数遷移</h3>
                                <!-- <a href="javascript:void(0);">View Report</a> -->
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex">
                                <p class="d-flex flex-column">
                                    <span class="text-bold text-lg">???</span>
                                    <span>Transactions Over Time</span>
                                </p>
                                <p class="ml-auto d-flex flex-column text-right">
                                    <!-- <span class="text-success">
                                    <i class="fa fa-arrow-up"></i> 12.5%
                                </span> -->
                                    <span class="text-muted">Since last 12 hours</span>
                                </p>
                            </div>
                            <!-- /.d-flex -->

                            <div class="position-relative mb-4">
                                <canvas id="transactions-in-progress-chart-<%= movieTheater.id %>" height="200"></canvas>
                            </div>

                            <div class="d-flex flex-row justify-content-end">
                                <!-- <span class="mr-2">
                                <i class="fa fa-square text-primary"></i> This Week
                            </span>

                            <span>
                                <i class="fa fa-square text-gray"></i> Last Week
                            </span> -->
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                    <% }) %>
            </div>
            <!-- /.col-md-4 -->

            <div class="col-lg-4 connectedSortable">
                <div class="card bg-dark">
                    <div class="card-header no-border">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">
                                タスクキュー遷移</h3>
                            <!-- <a href="javascript:void(0);">View Report</a> -->
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                            <p class="d-flex flex-column">
                                <span class="text-bold text-lg">???</span>
                                <span>タスクキュー数</span>
                            </p>
                            <p class="ml-auto d-flex flex-column text-right">
                                <!-- <span class="text-success">
                                        <i class="fa fa-arrow-up"></i> 12.5%
                                    </span> -->
                                <span class="text-muted">Since last 12 hours</span>
                            </p>
                        </div>
                        <!-- /.d-flex -->

                        <div class="position-relative mb-4">
                            <canvas id="task-queues-chart" height="200"></canvas>
                        </div>

                        <div class="d-flex flex-row justify-content-end">
                            <!-- <span class="mr-2">
                                    <i class="fa fa-square text-primary"></i> This Week
                                </span>
    
                                <span>
                                    <i class="fa fa-square text-gray"></i> Last Week
                                </span> -->
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-4 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- ChartJS 1.0.1 -->
<script src="/node_modules/admin-lte/plugins/chart.js/Chart.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        var movieTheaters = JSON.parse('<%- JSON.stringify(movieTheaters) %>');
        var globalTelemetries = JSON.parse('<%- JSON.stringify(globalTelemetries) %>');
        var sellerTelemetries = JSON.parse('<%- JSON.stringify(sellerTelemetries) %>');

        var ticksStyle = {
            fontColor: '#495057',
            fontStyle: 'bold'
        }

        var mode = 'index';
        var intersect = true;

        movieTheaters.forEach(function (movieTheater) {
            var telemetriesBySellerId = sellerTelemetries.filter((telemetry) => telemetry.object.sellerId === movieTheater.id);
            var data = telemetriesBySellerId.map(function (telemetry, index) {
                return {
                    x: index,
                    y: telemetry.result.transactions.numberOfUnderway
                };
            });
            var visitorsChart = new Chart($('#transactions-in-progress-chart-' + movieTheater.id), {
                type: 'line',
                data: {
                    // labels: ['12時間前', '9時間前', '6時間前', '3時間前', '0時間前'],
                    datasets: [
                        {
                            data: data,
                            backgroundColor: 'transparent',
                            borderColor: '#DAA8F5',
                            borderWidth: 1,
                            pointRadius: 2,
                            pointBorderColor: '#DAA8F5',
                            pointBackgroundColor: '#DAA8F5',
                            fill: false
                        },
                    ]
                },
                options: {
                    pointDot: true,
                    maintainAspectRatio: false,
                    legend: {
                        display: false
                    },
                    scales: {
                        yAxes: [{
                            display: true,
                            gridLines: {
                                display: true,
                                lineWidth: 1,
                                color: '#555c62',
                                zeroLineColor: '#555c62',
                            },
                            ticks: {
                                beginAtZero: true,
                                fontColor: '#a1a6a9'
                            }
                        }],
                        xAxes: [{
                            type: 'linear',
                            display: true,
                            gridLines: {
                                display: false
                            },
                            ticks: {
                                fontColor: '#a1a6a9'
                            }
                        }]
                    }
                }
            });
        });

        // タスクキューチャート
        var data = globalTelemetries.map(function (telemetry, index) {
            return {
                x: index,
                y: telemetry.result.tasks.numberOfUnexecuted
            };
        });
        var taskQueuesChart = new Chart($('#task-queues-chart'), {
            type: 'line',
            data: {
                // labels: ['12時間前', '9時間前', '6時間前', '3時間前', '0時間前'],
                datasets: [
                    {
                        data: data,
                        backgroundColor: 'transparent',
                        borderColor: '#DAA8F5',
                        borderWidth: 1,
                        pointRadius: 2,
                        pointBorderColor: '#DAA8F5',
                        pointBackgroundColor: '#DAA8F5',
                        fill: false
                    },
                ]
            },
            options: {
                pointDot: true,
                maintainAspectRatio: false,
                legend: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        display: true,
                        gridLines: {
                            display: true,
                            lineWidth: 1,
                            color: '#555c62',
                            zeroLineColor: '#555c62',
                        },
                        ticks: {
                            beginAtZero: true,
                            fontColor: '#a1a6a9'
                        }
                    }],
                    xAxes: [{
                        type: 'linear',
                        display: true,
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            fontColor: '#a1a6a9'
                        }
                    }]
                }
            }
        });
    });
</script>