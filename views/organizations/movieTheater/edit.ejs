<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">劇場編集[
                    <%= movieTheater.name.ja %>]</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/organizations/movieTheater">劇場検索</a>
                    </li>
                    <li class="breadcrumb-item active">劇場編集</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div> -->
                    <!-- /.card-header -->

                    <!-- form start -->
                    <form role="form" method="post">
                        <div class="card-body">
                            <% if (messages.message) { %>
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <h5>
                                        <i class="icon fa fa-check"></i> Congraturations!</h5>
                                    <%= messages.message %>
                                </div>
                                <% } %>

                                    <div class="form-group">
                                        <label for="name.ja">名前</label>
                                        <input type="text" class="form-control" id="name.ja" name="name.ja" placeholder="名前" value="<%= movieTheater.name.ja %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="name.en">名前(英)</label>
                                        <input type="text" class="form-control" id="name.en" name="name.en" placeholder="名前" value="<%= movieTheater.name.en %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="telephone">電話番号</label>
                                        <input type="text" class="form-control" id="telephone" name="telephone" placeholder="電話番号" value="<%= movieTheater.telephone %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="gmoInfo.siteId">GMOサイトID</label>
                                        <input type="text" class="form-control" id="gmoInfo.siteId" disabled placeholder="GMOサイトID" value="<%= process.env.GMO_SITE_ID %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="gmoInfo.shopId">GMOショップID</label>
                                        <input type="text" class="form-control" id="gmoInfo.shopId" name="gmoInfo.shopId" placeholder="GMOショップID" value="<%= movieTheater.gmoInfo.shopId %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="gmoInfo.shopPass">GMOショップPASS</label>
                                        <input type="text" class="form-control" id="gmoInfo.shopPass" name="gmoInfo.shopPass" placeholder="GMOショップPASS" value="<%= movieTheater.gmoInfo.shopPass %>">
                                    </div>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="pecorinoPaymentAccepted" name="pecorinoPaymentAccepted" <%=( movieTheater.pecorinoPaymentAccepted==='on'
                                            ) ? 'checked': '' %>>
                                        <label class="form-check-label" for="pecorinoPaymentAccepted">ポイント決済を許可(許可するとPecorino口座が開設されます)</label>
                                    </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">更新</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

