        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">劇場検索結果</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table id="movieTheaters-table" class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>枝番号</th>
                                    <th>詳細</th>
                                    <th>決済情報</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% movieTheaters.forEach(function(movieTheater){ %>
                                    <tr>
                                        <td>
                                            <ul class="list-unstyled">
                                                <li>
                                                    <%= movieTheater.id %>
                                                </li>
                                                <li>
                                                    <%= movieTheater.identifier %>
                                                </li>
                                            </ul>
                                        </td>
                                        <td>
                                            <%= movieTheater.location.branchCode %>
                                        </td>
                                        <td>
                                            <ul class="list-unstyled">
                                                <li>
                                                    <%= movieTheater.name.ja %>
                                                </li>
                                                <li>
                                                    <%= movieTheater.name.en %>
                                                </li>
                                                <li>
                                                    <%= movieTheater.telephone %>
                                                </li>
                                                <li>
                                                    <%= movieTheater.url %>
                                                </li>
                                            </ul>
                                        </td>
                                        <td>
                                            <ul class="list-unstyled">
                                                <li>
                                                    <%= (movieTheater.gmoInfo) ? JSON.stringify(movieTheater.gmoInfo) : '' %>
                                                </li>
                                                <% if (Array.isArray(movieTheater.paymentAccepted)) { %>
                                                    <% movieTheater.paymentAccepted.forEach(function(paymentAccepted){ %>
                                                        <li>
                                                            <%= JSON.stringify(paymentAccepted) %>
                                                        </li>
                                                        <% }) %>
                                                            <% } %>
                                            </ul>
                                        </td>
                                        <td>
                                            <ul class="list-unstyled">
                                                <li>
                                                    <a href="/organizations/movieTheater/<%= movieTheater.id %>">編集</a>
                                                </li>
                                            </ul>

                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>枝番号</th>
                                    <th>詳細</th>
                                    <th>決済情報</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- DataTables -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/datatables/dataTables.bootstrap4.css">

<!-- page script -->
<script>
    $(function () {
        $("#movieTheaters-table").DataTable({
            "order": [[1, 'asc']], // デフォルトは枝番号昇順
            "ordering": true
        });
    });
</script>