<%
let pointAccountPayment;
let gmoInfo;
if (movieTheater !== undefined) {
    pointAccountPayment = movieTheater.paymentAccepted.find((p)=>p.paymentMethodType === PaymentMethodType.Pecorino);
}
%>

<div class="form-group">
    <label for="branchCode">劇場枝番号</label>
    <input type="text" class="form-control" id="branchCode" name="branchCode" placeholder="名前" <% if (movieTheater !==undefined)
        { %> disabled value="
    <%= movieTheater.location.branchCode %>"
    <% } %>>
</div>
<div class="form-group">
    <label for="name[ja]">名前</label>
    <input type="text" class="form-control" id="name[ja]" name="name[ja]" placeholder="名前" value="<%= (movieTheater !== undefined) ?  movieTheater.name.ja : '' %>">
</div>
<div class="form-group">
    <label for="name[en]">名前(英)</label>
    <input type="text" class="form-control" id="name[en]" name="name[en]" placeholder="名前" value="<%= (movieTheater !== undefined) ?  movieTheater.name.en : '' %>">
</div>
<div class="form-group">
    <label for="telephone">電話番号</label>
    <input type="text" class="form-control" id="telephone" name="telephone" placeholder="電話番号" value="<%= (movieTheater !== undefined) ?  movieTheater.telephone : '' %>">
</div>
<div class="form-group">
    <label for="url">URL</label>
    <input type="text" class="form-control" id="url" name="url" placeholder="URL" value="<%= (movieTheater !== undefined) ?  movieTheater.url : '' %>">
</div>
<div class="form-group">
    <label for="gmoInfo[siteId]">GMOサイトID</label>
    <input type="text" class="form-control" id="gmoInfo[siteId]" disabled placeholder="GMOサイトID" value="<%= process.env.GMO_SITE_ID %>">
</div>
<div class="form-group">
    <label for="gmoInfo[shopId]">GMOショップID</label>
    <input type="text" class="form-control" id="gmoInfo[shopId]" name="gmoInfo[shopId]" placeholder="GMOショップID" value="<%= (movieTheater !== undefined) ?  movieTheater.gmoInfo.shopId : '' %>">
</div>
<div class="form-group">
    <label for="gmoInfo[shopPass]">GMOショップPASS</label>
    <input type="text" class="form-control" id="gmoInfo[shopPass]" name="gmoInfo[shopPass]" placeholder="GMOショップPASS"
        value="<%= (movieTheater !== undefined) ?  movieTheater.gmoInfo.shopPass : '' %>">
</div>
<div class="form-check">
    <input type="checkbox" class="form-check-input" id="pecorinoPaymentAccepted" name="pecorinoPaymentAccepted" <%=(movieTheater
        !==undefined && movieTheater.pecorinoPaymentAccepted==='on' ) ? 'checked' : '' %>>
    <label class="form-check-label" for="pecorinoPaymentAccepted">ポイント決済を許可(許可するとPecorino口座が開設されます)</label>
</div>