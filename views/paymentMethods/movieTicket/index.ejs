<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">ムビチケ検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/home">Home</a>
                    </li>
                    <li class="breadcrumb-item active">ムビチケ検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div> -->
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" method="get">
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label for="name">購入管理番号</label>
                                    <input type="text" class="form-control" id="identifiers" name="identifiers"
                                        placeholder="8559919013,8559919014" value="<%= searchConditions.identifiers %>">
                                </div>

                                <div class="form-group col-md-2">
                                    <label for="name">券種区分</label>
                                    <input type="text" class="form-control" id="serviceTypes" name="serviceTypes"
                                        placeholder="01,09,BG" value="<%= searchConditions.serviceTypes %>">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer clearfix">
                            <a href="/projects/<%= req.project.id %>/paymentMethods/movieTicket/check"
                                class="btn btn-primary">
                                <i class="fa fa-unlock"></i> ムビチケ認証</a>
                            <button type="submit" class="btn btn-secondary float-right">検索</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Results</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table id="paymentMethods-table" class="table table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>購入管理番号</th>
                                    <th>券種区分</th>
                                    <th>有効期間</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>購入管理番号</th>
                                    <th>券種区分</th>
                                    <th>有効期間</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- DataTables -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">

