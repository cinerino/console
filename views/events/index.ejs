<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">イベント検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/home">Home</a>
                    </li>
                    <li class="breadcrumb-item active">イベント検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div> -->
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" method="get">
                        <input type="hidden" class="form-control" id="backendUrl" name="chevreBackendEndpoint"
                            value="/projects/<%= req.project.id %>/events/chevreBackend">
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label>開催日</label>

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control" name="startRange" id="reservation"
                                            value="<%= moment(searchConditions.startFrom).format('YYYY-MM-DDTHH:mm:ssZ') %> - <%= moment(searchConditions.startThrough).format('YYYY-MM-DDTHH:mm:ssZ') %>">
                                    </div>
                                    <!-- /.input group -->
                                </div>

                                <div class="form-group col-md-2">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                                        value="<%= searchConditions.name %>">
                                </div>

                                <div class="form-group col-md-2">
                                    <label>Event Status</label>
                                    <select multiple class="form-control" name="eventStatuses[]">
                                        <% Object.values(EventStatusType).forEach(function (eventStatus) { %>
                                        <% 
                                            var selected = false;
                                            selected = Array.isArray(searchConditions.eventStatuses) && searchConditions.eventStatuses.indexOf(eventStatus) >= 0;
                                            %>
                                        <option value="<%= eventStatus %>" <% if (selected) { %> selected <% } %>>
                                            <%= eventStatus %>
                                        </option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group col-md-2">
                                    <label>販売者</label>
                                    <select multiple class="form-control" name="seller[ids][]">
                                        <% sellers.forEach(function (seller) { %>
                                        <option value="<%= seller.id %>" <%=( searchConditions.seller !==undefined &&
                                            Array.isArray(searchConditions.seller.ids) &&
                                            searchConditions.seller.ids.indexOf(seller.id)>=
                                            0) ? 'selected' : '' %>><%= seller.name.ja %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer clearfix">
                            <button type="button" class="btn btn-primary importScreeningEvents">
                                <i class="fa fa-plus"></i> 在庫仕入れ from Chevre | COA</button>
                            <button type="button" class="btn btn-success updateEvents">
                                <i class="fa fa-calendar-alt"></i> 在庫管理 by Chevre</button>
                            <button type="submit" class="btn btn-secondary float-right">検索</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Results</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table id="events-table" class="table table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Name<br>Alternative Headline</th>
                                    <th>Location</th>
                                    <th>Super Event</th>
                                    <th>Work Performed</th>
                                    <th>Offers</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Name<br>Alternative Headline</th>
                                    <th>Location</th>
                                    <th>Super Event</th>
                                    <th>Work Performed</th>
                                    <th>Offers</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

