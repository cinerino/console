<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Invoice</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/dashboard">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Invoice</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- <div class="callout callout-info">
                        <h5>
                            <i class="fa fa-info"></i> Note:</h5>
                        This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
                    </div> -->


                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fa fa-film"></i>
                                <%= order.seller.name %>
                                <small class="float-right">Date:
                                    <%= moment(order.orderDate).format('D/M/YYYY') %>
                                </small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            From
                            <address>
                                <strong>
                                    <%= order.seller.name %>
                                </strong>
                                <br> Phone:
                                <%= order.seller.telephone %>
                                <br> Email:
                                <%= order.seller.email %>
                                <br> Url:
                                <%= order.seller.url %>
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            To
                            <address>
                                <strong>
                                    <%= order.customer.givenName %>
                                    <%= order.customer.familyName %>
                                </strong>
                                <br> Phone:
                                <%= order.customer.telephone %>
                                <br> Email:
                                <%= order.customer.email %>
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <!-- <b>Invoice #007612</b>
                                <br>
                                <br> -->
                            <b>注文番号:</b>
                            <%= order.orderNumber %>
                            <!-- <br>
                                    <b>Payment Due:</b> 2/22/2014 -->
                            <br>
                            <b>確認番号:</b>
                            <%= order.confirmationNumber %>
                            <!-- <br>
                                        <b>Payment Due:</b> 2/22/2014 -->
                            <br>
                            <b>Payment Method:</b>
                            <br>
                            <%- (order.paymentMethods.length > 0) ? order.paymentMethods.map((p)=>`${p.name} ${p.paymentMethodId}`).join('<br>') : '' %>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Quantity</th>
                                        <th>Product</th>
                                        <th>Ticket
                                            <i class="fa fa-ticket"></i>
                                        </th>
                                        <th>Description</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% order.acceptedOffers.forEach(function(acceptedOffer){ %>
                                    <tr>
                                        <td>
                                            <%= (acceptedOffer.itemOffered.numSeats !== undefined) ? acceptedOffer.itemOffered.numSeats : 1 %>
                                        </td>
                                        <td>
                                            <% if (acceptedOffer.itemOffered.typeOf === 'EventReservation') { %>
                                            <% if (acceptedOffer.itemOffered.reservationFor !== undefined) { %>
                                            <a target="_blank"
                                                href="/projects/<%= req.project.id %>/events/screeningEvent/<%= acceptedOffer.itemOffered.reservationFor.id %>">
                                                <%= acceptedOffer.itemOffered.reservationFor.name.ja %>
                                                <br>
                                                <%= moment(acceptedOffer.itemOffered.reservationFor.startDate).format('lllZ') %>
                                                -
                                                <%= moment(acceptedOffer.itemOffered.reservationFor.endDate).format('lllZ') %>
                                                <br>@
                                                <%= acceptedOffer.itemOffered.reservationFor.superEvent.location.name.ja %>
                                                <%= acceptedOffer.itemOffered.reservationFor.location.name.ja %>
                                            </a>
                                            <% } %>
                                            <% } else if (acceptedOffer.itemOffered.typeOf === 'ProgramMembership') { %>
                                            <%= acceptedOffer.itemOffered.programName %>
                                            <% } else { %>
                                            <%= `${acceptedOffer.itemOffered.typeOf} ${acceptedOffer.itemOffered.name}` %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (acceptedOffer.itemOffered.typeOf === 'EventReservation') { %>
                                            <% if (acceptedOffer.itemOffered.reservedTicket !== undefined) { %>
                                            <% if (acceptedOffer.itemOffered.reservedTicket.ticketedSeat !== undefined) { %>
                                            Seat Number:
                                            <%= acceptedOffer.itemOffered.reservedTicket.ticketedSeat.seatNumber %>
                                            <% } else { %>
                                            Non-reserved Seat
                                            <% } %>
                                            <% } %>
                                            <% } %>
                                            <br>
                                            <% if (acceptedOffer.itemOffered.typeOf === 'EventReservation') { %>
                                            <%= (acceptedOffer.itemOffered.reservedTicket !== undefined) ? acceptedOffer.itemOffered.reservedTicket.ticketToken : '' %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (acceptedOffer.itemOffered.typeOf === 'EventReservation') { %>
                                            <% } else if (acceptedOffer.itemOffered.typeOf === 'ProgramMembership') { %>
                                            <%= acceptedOffer.price %>
                                            <%= acceptedOffer.priceCurrency %>
                                            per
                                            <%= moment.duration(acceptedOffer.eligibleDuration.value, 'seconds').humanize() %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (Number.isInteger(acceptedOffer.price)) { %>
                                            <%= acceptedOffer.price %>
                                            <% } else if (acceptedOffer.priceSpecification !== undefined) { %>
                                            <% if (Array.isArray(acceptedOffer.priceSpecification.priceComponent)) { %>
                                            <% const unitPriceSpec = acceptedOffer.priceSpecification.priceComponent.find((c) => c.typeOf === 'UnitPriceSpecification') %>
                                            <% if (unitPriceSpec !== undefined) { %>
                                            <%= unitPriceSpec.price %> / <%= unitPriceSpec.referenceQuantity.value %>
                                            <%= unitPriceSpec.priceCurrency %>
                                            <% } %>
                                            <% } %>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-6">
                            <!-- <p class="lead">Payment Methods:</p>
                                <img src="../../dist/img/credit/visa.png" alt="Visa">
                                <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
                                <img src="../../dist/img/credit/american-express.png" alt="American Express">
                                <img src="../../dist/img/credit/paypal2.png" alt="Paypal">
    
                                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                                </p> -->
                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <!-- <p class="lead">Amount Due 2/22/2014</p> -->
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th style="width:50%">Subtotal:</th>
                                        <td>
                                            <%= order.price %>
                                            <%= order.priceCurrency %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Tax</th>
                                        <td>Included</td>
                                    </tr>
                                    <tr>
                                        <th>Shipping:</th>
                                        <td>0 JPY</td>
                                    </tr>
                                    <tr>
                                        <th>Discount:</th>
                                        <td>
                                            <%= order.discounts.reduce((a, b)=>a+b.discount,0) %>
                                            <%= (order.discounts.length > 0) ? order.discounts[0].discountCurrency : 'JPY' %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Total:</th>
                                        <td>
                                            <%= order.price %>
                                            <%= order.priceCurrency %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-12">
                            <a href="javascript:void(0)" onclick="window.print(); return false;"
                                class="btn btn-default">
                                <i class="fa fa-print"></i> Print</a>
                            <% if (order.orderStatus === 'OrderDelivered') { %>
                            <a href="#" class="btn btn-danger float-right" data-toggle="modal"
                                data-target="#modal-confirmReturnOrder"><i class="fa fa-undo"></i> 返品</a>
                            <button type="button" class="btn btn-warning float-right sendEmailMessage"
                                style="margin-right: 5px;">
                                <i class="fa fa-envelope"></i> 配送メール送信
                            </button>
                            <% } %>
                            <% if (order.orderStatus === 'OrderReturned') { %>
                            <button type="button" class="btn btn-default float-right disabled">
                                <i class="fa fa-undo"></i> 返品済
                            </button>
                            <% } %>
                        </div>
                    </div>
                </div>
                <!-- /.invoice -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- ./col -->
            <div class="col-md-12 no-print">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#timeline"
                                    data-toggle="tab">Timeline</a></li>
                            <li class="nav-item"><a class="nav-link" href="#jsonViewer" data-toggle="tab">JSON
                                    Viewer</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="timeline">
                                <%- include('../parts/timelines', {timelines: timelines}) %>
                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="jsonViewer">
                                <div class="form-group">
                                    <textarea class="form-control" rows="20" placeholder=""
                                        disabled=""><%= JSON.stringify(order, null, '\t') %></textarea>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- Modal -->
<div class="modal fade" id="modal-confirmReturnOrder" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= order.orderNumber %>の返品処理を実行しますか？</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><%= order.orderNumber %>の返品処理を実行するには、注文番号「<b><%= order.orderNumber %></b>」を入力してください。
                </p>
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="confirmReturnOrder" placeholder="注文番号"
                            data-expected="<%= order.orderNumber %>">
                    </div>

                    <hr>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="refundCreditCard" name="refundCreditCard"
                            checked>
                        <label class="form-check-label" for="refundCreditCard">クレジットカード決済を返金する</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="refundMovieTicket" name="refundMovieTicket">
                        <label class="form-check-label" for="refundMovieTicket">ムビチケ着券を取り消す(注文確定後10分間有効)</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
                <button type="button" class="btn btn-danger disabled returnOrder" disabled>返品する</button>
            </div>
        </div>
    </div>
</div>

